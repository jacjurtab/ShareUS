<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_publicar"
    tools:context=".ui.publicar.PublicarFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Nuevo Viaje"
                android:textSize="40sp">
            </TextView>

            <Spinner
                android:id="@+id/Spinnerorigen"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center">

            </Spinner>

            <Spinner
                android:id="@+id/Spinnerdestino"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:entries="@array/ubicaciones"
                android:prompt="@string/spinnerubi"
                android:textAlignment="center">

            </Spinner>

            <EditText
                android:id="@+id/etPlannedDate"
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:focusable="false"
                android:hint="Introduzca fecha"
                android:inputType="date"
                android:maxLines="1"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/etPlannedHour"
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:focusable="false"
                android:hint="Introduzca hora"
                android:inputType="date"
                android:maxLines="1"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/plazasTotales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="NÃºmero de pasajeros"
                android:inputType="number"
                android:textAlignment="center">
            </EditText>

            <EditText
                android:id="@+id/precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Precio por pasajero"
                android:inputType="numberDecimal"
                android:textAlignment="center">
            </EditText>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp">

                <Button
                    android:id="@+id/atras"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/colorRojoBoton"
                    android:layout_height="wrap_content"
                    android:text="Cancelar" />

                <Button
                    android:id="@+id/publicar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:backgroundTint="@color/colorAccent"
                    android:text="Publicar" />

            </GridLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>