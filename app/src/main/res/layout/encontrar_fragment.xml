<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/encontrar_fr"
    android:orientation="vertical"
    tools:context=".ui.encontrar.EncontrarFragment">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="10dp"
            android:elevation="20dp">
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                        <TextView
                            android:id="@+id/TextViewTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            android:text="@string/encontrar_viaje"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:layout_marginBottom="10dp"
                            android:textSize="40sp"/>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:useDefaultMargins="true"
                            android:columnCount="2"
                            android:rowCount="2">
                                <RelativeLayout
                                    android:layout_row="0"
                                    android:layout_column="0">
                                        <ImageView
                                            android:layout_marginTop="15dp"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:scaleType="fitXY"
                                            android:layout_centerVertical="true"
                                            android:id="@+id/imagen"
                                            app:tint="@color/colorPrimaryDark"
                                            android:src="@drawable/ic_baseline_trip_origin_24"/>
                                        <LinearLayout
                                            android:layout_toEndOf="@id/imagen"
                                            android:layout_width="match_parent"
                                            android:id="@+id/primerselect"
                                            android:layout_height="wrap_content">
                                                <Spinner
                                                    android:id="@+id/spinnerOr"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="35dp"
                                                    android:textAlignment="center"
                                                    style="@style/spinner_style"/>
                                        </LinearLayout>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_row="1"
                                    android:layout_column="0">
                                        <ImageView
                                            android:id="@+id/imag"
                                            android:layout_marginTop="15dp"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_centerVertical="true"
                                            android:scaleType="fitXY"
                                            app:tint="@color/colorPrimaryDark"
                                            android:src="@drawable/ic_baseline_trip_destination_24"/>
                                        <LinearLayout
                                            android:layout_toEndOf="@id/imag"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                                <Spinner
                                                    android:id="@+id/spinnerDest"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="35dp"
                                                    android:textAlignment="center"
                                                    style="@style/spinner_style"/>
                                        </LinearLayout>
                                </RelativeLayout>
                        </GridLayout>
                        <Button
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_buscar"
                            android:layout_gravity="center"
                            android:text="@string/btn_buscar"
                            android:backgroundTint="@color/colorAccent"/>
                </LinearLayout>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_undraw_navigator"/>
</LinearLayout>
